<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="232dp"
    android:layout_marginHorizontal="8dp"
    android:elevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <!--            <ImageView-->
            <!--                android:id="@+id/imReviewer"-->
            <!--                android:layout_width="84dp"-->
            <!--                android:layout_height="84dp"-->
            <!--                android:paddingHorizontal="8dp"-->
            <!--                android:paddingVertical="8dp"-->
            <!--                app:srcCompat="@drawable/baseline_account_circle_24" />-->

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imReviewer"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_marginLeft="4dp"
                android:padding="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/baseline_account_circle_24"
                app:shapeAppearanceOverlay="@style/Circular" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvReviewer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ted"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/ratingBarReviewCard"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:numStars="5"
                    android:progressTint="#FFC107"
                    android:rating="4.0"
                    android:secondaryProgressTint="#FFC107"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/tvReviewDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="14 February 2024"
                    android:textColor="#8C8C8C"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvReviewDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="Wonderful tour a must do in Bangkok. The tour guide is a lovely ans smart person. Highly recommend this."
            android:textColor="#8C8C8C"
            android:textSize="16sp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
